{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/templates/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist/src",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
